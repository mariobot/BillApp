@model BillApp.Domain.Invoice

@{
    ViewBag.Title = "Details";
}
<div class="card">
    <div class="header">
        <h4>Factura</h4>
    </div>
    <div class="row">
        <div class="col-lg-offset-1 col-lg-5">
            <h5>Numero: @Model.InvoiceNumber</h5>
        </div>
        <div class="col-lg-6">
            <h5>Fecha: @Model.DateCreated.ToShortDateString() @Model.DateCreated.ToShortTimeString()</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-offset-1 col-lg-5">
            <h5>Identificador Unico: @Model.InvoiceHeader.Identification</h5>
        </div>
        <div class="col-lg-6">
            <h5>Nombre: @Model.InvoiceHeader.Name</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-offset-1 col-lg-5">
            <h5>Direccion: @Model.InvoiceHeader.Adress</h5>
        </div>
        <div class="col-lg-6">
            <h5>Telefono: @Model.InvoiceHeader.Phone</h5>
        </div>
    </div>
    <hr />
    <div class="row">

    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div id="invoiceItem" class="success">
                @Html.Partial("_InvItems", Model.InvoiceItems)
            </div>
        </div>
        <div class="col-lg-12">            
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
