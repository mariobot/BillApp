@using BillApp.Web.Models

@model LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesion";
    Layout = "~/Views/Shared/_LayoutClear.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-lg-offset-4 col-lg-4">
        <div class="card card-user">
            <div class="image">
                <img src="~/assets/img/background.jpg" alt="..." />
            </div>
            <div class="content">
                <div class="author">
                    <img class="avatar border-white" src="~/assets/img/faces/face-2.jpg" alt="..." />
                    <h4 class="title">
                        Iniciar Sesion
                        <br />
                    </h4>
                </div>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row text-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-lg-offset-2 col-lg-8">
                            <div class="form-group">                                
                                <label>Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-offset-2 col-lg-8">
                            <div class="form-group">
                                <label>Password</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    @*<div class="row">
                        <div class="col-offset-2 col-lg-8">
                            <div class="form-group">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                    </div>*@
                    <div class="row text-center">
                        <div class="form-group">
                            <div>
                                <br />
                                <input type="submit" value="Iniciar Sesion" class="btn btn-default" />
                                <br />
                                <br />
                                <a href="@Url.Action("Register","Account")" class="btn btn-sm btn-success"> Registrarme</a>
                                <br />
                            </div>
                        </div>                        
                    </div>
                }
            </div>            
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}