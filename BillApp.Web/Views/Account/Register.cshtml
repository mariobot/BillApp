@model BillApp.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarme";
    Layout = "~/Views/Shared/_LayoutClear.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-lg-offset-4 col-lg-4">
        <div class="card card-user">
            <div class="image">
                <img src="~/assets/img/background.jpg" alt="..." />
            </div>
            <div class="content">
                <div class="author">
                    <img class="avatar border-white" src="~/assets/img/faces/face-3.jpg" alt="..." />
                    <h4 class="title">
                        Registrarme
                        <br />
                    </h4>
                </div>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row text-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-lg-offset-2 col-lg-8">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-offset-2 col-lg-8">
                            <div class="form-group">
                                <label>Password</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-offset-2 col-lg-8">
                            <div class="form-group">
                                <label>Confirmar Password</label>
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Confirmar Password" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="form-group">
                            <div>
                                <br />
                                <input type="submit" value="Registrarme" class="btn btn-default" />
                                <br />                                
                                @*<a href="@Url.Action("Register","Account")" class="btn btn-sm btn-success"> Registrarme</a>*@
                                
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
