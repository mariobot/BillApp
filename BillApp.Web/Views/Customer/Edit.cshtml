@model BillApp.Domain.Customer

@{
    ViewBag.Title = "Edit";
}

<div class="col-lg-8 col-md-7">
    <div class="card">
        <div class="header">
            <h4 class="title">Editar Cliente</h4>
        </div>
        <div class="content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.AuthorId)
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Documento</label>
                            @Html.EditorFor(model => model.Document, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Documento" } })
                            @Html.ValidationMessageFor(model => model.Document, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Telefono</label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Telefono" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nombres</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Nombres" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Apellidos</label>
                            @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Apellidos" } })
                            @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-info btn-fill btn-wd">Editar Cliente</button>
                </div>
                <div class="clearfix"></div>

            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
