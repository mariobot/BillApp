@model BillApp.Domain.InvoiceHeader

@{
    ViewBag.Title = "Editar encabezado de factura";
}

<div class="col-lg-8 col-md-7">
    <div class="card">
        <div class="header">
            <h4 class="title">Editar encabezado de factura</h4>
        </div>
        <div class="content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.AuthorId)
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Nombre Empresa</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Nombre Empresa" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Identificacion</label>
                            @Html.EditorFor(model => model.Identification, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Identificacion" } })
                            @Html.ValidationMessageFor(model => model.Identification, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Direccion</label>
                            @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Direccion" } })
                            @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Telefono</label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Telefono" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Secuencia</label>
                            @Html.EditorFor(model => model.Sequence, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Secuencia" } })
                            @Html.ValidationMessageFor(model => model.Sequence, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Prefijo</label>
                            @Html.EditorFor(model => model.Prefix, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Prefijo" } })
                            @Html.ValidationMessageFor(model => model.Prefix, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-info btn-fill btn-wd">Editar Encabezado</button>
                </div>
                <div class="clearfix"></div>

            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
