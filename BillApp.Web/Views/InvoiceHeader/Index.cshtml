@model BillApp.Domain.InvoiceHeader
@{
    ViewBag.Title = "Index";
}

<div class="col-lg-8 col-md-7">
    <div class="card">
        <div class="header">
            <h4 class="title">Mi Encabezado de factura</h4>
        </div>
        <div class="content">           
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Nombre Empresa</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Nombre Empresa", @disabled="" } })                            
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Identificacion</label>
                            @Html.EditorFor(model => model.Identification, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Identificacion", @disabled = "" } })                            
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Direccion</label>
                            @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Direccion", @disabled = "" } })                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Telefono</label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Telefono", @disabled = "" } })                            
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Email", @disabled = "" } })                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Secuencia</label>
                            @Html.EditorFor(model => model.Sequence, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Secuencia", @disabled = "" } })                            
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Prefijo</label>
                            @Html.EditorFor(model => model.Prefix, new { htmlAttributes = new { @class = "form-control border-input", @placeholder = "Prefijo", @disabled = "" } })                            
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <a href="@Url.Action("Edit","InvoiceHeader",new { id = Model.Id})" class="btn btn-info btn-fill btn-wd">Editar Encabezado</a>
                </div>
                <div class="clearfix"></div>            
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
